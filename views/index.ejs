<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
</head>
<body>
    <h1>Item List</h1>
    <a href="/form">Add New Item</a>
    <ul>
        <% items.forEach(item => { %>
            <li>
                <strong><%= item.name %></strong>: <%= item.description %> (Quantity: <%= item.quantity %>) (Price: <%= item.price %>)  <!-- Added price field -->
                <form action="/items/update/<%= item._id %>" method="POST">
                    <input type="text" name="name" value="<%= item.name %>">
                    <input type="text" name="description" value="<%= item.description %>">
                    <input type="number" name="quantity" value="<%= item.quantity %>">
                    <input type="number" name="price" value="<%= item.price %>">  <!-- Added price input -->
                    <button type="submit">Update</button>
                </form>
                <form action="/items/delete/<%= item._id %>" method="Delete" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
